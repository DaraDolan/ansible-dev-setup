export ZSH="$HOME/.oh-my-zsh"

plugins=(
  git               # Git aliases & shortcuts
  tmux              # Tmux shortcuts
  tmuxinator        # Manage tmux sessions
  laravel           # Laravel helper commands
  sudo              # Type "!!" to repeat last command as sudo
  web-search        # `google something` to search Google
  aliases           # General command aliases
  docker            # Docker shortcuts
  docker-compose    # Docker Compose aliases
  aws               # AWS CLI shortcuts
  history           # Enhanced shell history search
)

source "$ZSH/oh-my-zsh.sh"

# Load Zinit plugins
source "$HOME/.zinitrc"

# Load Powerlevel10k prompt
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Add custom local configuration sourcing if desired
[[ -d ~/.dotfiles/zsh/local ]] && for file in ~/.dotfiles/zsh/local/*.zsh; do
  source "$file"
done

# Ensure ~/.local/bin and Composer global bin are in PATH
export PATH="$HOME/.local/bin:$HOME/.config/composer/vendor/bin:$PATH"

# Set Neovim as default editor
export EDITOR="nvim"
export VISUAL="nvim"

# Initialize zoxide for fast directory jumping
if command -v zoxide &> /dev/null; then
    eval "$(zoxide init zsh)"
fi

# Explicitly disable Claude Code telemetry - remove any existing telemetry variables
unset CLAUDE_CODE_ENABLE_TELEMETRY
unset OTEL_METRICS_EXPORTER
unset OTEL_EXPORTER_DISABLED
export CLAUDE_CODE_ENABLE_TELEMETRY=0
export OTEL_EXPORTER_DISABLED=1

# Claude Code alias
alias ccode='claude code'
# General productivity aliases
alias c="clear"
alias o="open ."
alias sizes='du -sh -c *'
alias cwd="pwd && pwd | pbcopy && echo 'Copied to clipboard üìÅ'"
alias os='cd ~/code/php/open-source'

# Composer shortcuts
alias co='composer'
alias ci='co install'
alias cg='nvim ~/.composer/composer.json'
alias cogu='co global update'
alias ptest='./vendor/bin/pest'

# Laravel Sail shortcuts (official Laravel recommendation)
alias sail='sh $([ -f sail ] && echo sail || echo vendor/bin/sail)'
alias spf='sail test --filter'

# Custom functions
sz() {
    zinit cclear    # Clear zinit's cache
    source ~/.zshrc
    echo 'Sourced zshrc and cleared zinit cache'
}

v() {
    nvim .
}
